@model Comic.Data.NguoiDung
@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <h2 class="text-left mb-4">👤 Hồ sơ cá nhân</h2>

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success">@ViewBag.Success</div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="row">
        <!-- Avatar -->
        <div class="col-md-4 text-center">
            <i class="fa fa-user-circle" style="font-size:120px; color:gray;"></i>
            <h4 class="mt-3">@Model.TenNguoiDung</h4>
            <p class="text-muted">@Model.Email</p>
        </div>

        <!-- Thông tin -->
        <div class="col-md-8">
            <form asp-action="UpdateProfile" method="post">
                @Html.AntiForgeryToken() <!-- Bảo mật -->

                <input type="hidden" asp-for="MaNguoiDung" />

                <div class="form-group mb-3">
                    <label asp-for="TenNguoiDung" class="form-label"></label>
                    <input asp-for="TenNguoiDung" class="form-control" />
                    <span asp-validation-for="TenNguoiDung" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">💾 Lưu thay đổi</button>
                <a asp-action="ChangePassword" class="btn btn-info">🔑 Đổi mật khẩu</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
