@model IEnumerable<Comic.Data.TruyenTranh>

<section id="advertisement">
    <div class="container">
        <img src="images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<div class="row">
	<div class="col-sm-3">
		@Html.Partial("_SidebarPartial")
	</div>
<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">Truyện hay mỗi ngày</h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">

					<div class="single-products">

						<div class="productinfo text-center">
							<img src="~/images/home/@item.Image" alt="@item.TenTruyen" width="100%" />
							<h2>@item.TenTruyen</h2>
							<p>Tác giả: @item.TacGia</p>
								<p>
									Thể loại:
									@if (item.MaTheLoais != null && item.MaTheLoais.Any())
									{
										@string.Join(", ", item.MaTheLoais.Select(tl => tl.TenTheLoai))
									}
									else
									{
										<span>Chưa có thể loại</span>
									}
								</p>
							<p>Số lượt xem: @item.SoLuotXem</p>
							<button type="button" class="btn btn-default cart" onclick="addToLibrary(@item.MaTruyen)">
								<i class="fa fa-shopping-cart"></i> Thêm vào thư viện
							</button>
						</div>
						<div class="product-overlay">
								<a asp-action="Details" asp-controller="TruyenTranh" asp-route-MaTruyen="@item.MaTruyen">
								<div class="overlay-content">
									<h2>@item.TenTruyen</h2>
									<p>Tác giả: @item.TacGia</p>
										<p>
											Thể loại:
											@if (item.MaTheLoais != null && item.MaTheLoais.Any())
											{
												@string.Join(", ", item.MaTheLoais.Select(tl => tl.TenTheLoai))
											}
											else
											{
												<span>Chưa có thể loại</span>
											}
										</p>
									<p>Số lượt xem: @item.SoLuotXem</p>
										<button type="button" class="btn btn-default cart" onclick="addToLibrary(event, @item.MaTruyen)">
											<i class="fa fa-shopping-cart"></i> Thêm vào thư viện
										</button>

										<script>
											function addToLibrary(e, maTruyen) {
												e.preventDefault(); // Ngăn click "bong bóng" lên <a>
												fetch(`/ThuVien/AddToLibrary?maTruyen=${maTruyen}`, { method: 'POST' })
													.then(res => res.json())
													.then(data => {
														alert(data.message);
													});
											}
										</script>

								</div>
							</a>
						</div>

					</div>
					<div class="choose">
						<ul class="nav nav-pills nav-justified">
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
						</ul>
					</div>
				</div>
			</div>

			<!--sanpham-->
		}
	</div><!--features_items-->
	</div>
