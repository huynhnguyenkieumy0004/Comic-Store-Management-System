@model IEnumerable<Comic.Data.TruyenTranh>

<div class="col-sm-3">
	@Html.Partial("_SidebarPartial")
</div>


<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">Truyện hay mỗi ngày</h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">

					<div class="single-products">

						<div class="productinfo text-center">
							<img src="~/images/home/@item.Image" alt="@item.TenTruyen" width="100%" />
							<h2>@item.TenTruyen</h2>
							<p>Tác giả: @item.TacGia</p>
							<p>
								Thể loại:
								@if (item.MaTheLoais != null && item.MaTheLoais.Any())
								{
									@string.Join(", ", item.MaTheLoais.Select(tl => tl.TenTheLoai))
								}
								else
								{
									<span>Chưa có thể loại</span>
								}
							</p>

							<p>Số lượt xem: @item.SoLuotXem</p>
							<button type="button" class="btn btn-default cart" onclick="addToLibrary(@item.MaTruyen)">
								<i class="fa fa-shopping-cart"></i> Thêm vào thư viện
							</button>
						</div>
						<div class="product-overlay">
							<a asp-action="Details" asp-controller="TruyenTranh" asp-route-MaTruyen="@item.MaTruyen">
								<div class="overlay-content">
									<h2>@item.TenTruyen</h2>
									<p>Tác giả: @item.TacGia</p>
									<p>
										Thể loại:
										@if (item.MaTheLoais != null && item.MaTheLoais.Any())
										{
											@string.Join(", ", item.MaTheLoais.Select(tl => tl.TenTheLoai))
										}
										else
										{
											<span>Chưa có thể loại</span>
										}
									</p>

									<p>Số lượt xem: @item.SoLuotXem</p>
									<button type="button" class="btn btn-default cart" onclick="addToLibrary(event, @item.MaTruyen)">
										<i class="fa fa-shopping-cart"></i> Thêm vào thư viện
									</button>

									<script>
										function addToLibrary(e, maTruyen) {
											e.preventDefault(); // Ngăn click "bong bóng" lên <a>
											fetch(`/ThuVien/AddToLibrary?maTruyen=${maTruyen}`, { method: 'POST' })
												.then(res => res.json())
												.then(data => {
													alert(data.message);
												});
										}
									</script>

								</div>
							</a>
						</div>

					</div>
					<div class="choose">
						<ul class="nav nav-pills nav-justified">
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
						</ul>
					</div>
				</div>
			</div>

			<!--sanpham-->
		}
	</div><!--features_items-->

	<div class="category-tab">
		<!--category-tab-->
		<div class="col-sm-12">
			<ul class="nav nav-tabs">
				<li class="active"><a href="#tshirt" data-toggle="tab">Top</a></li>
				<li><a href="#blazers" data-toggle="tab">Reccommend</a></li>
				<li><a href="#sunglass" data-toggle="tab">Hot</a></li>
			</ul>
		</div>
		<div class="tab-content">
			<div class="tab-pane fade active in" id="tshirt">
				<div class="col-sm-3">
					<div class="product-image-wrapper">
						<div class="single-products">
							<div class="productinfo text-center">
								<img src="images/home/gallery1.jpg" alt="" />
								<h2>$56</h2>
								<p>Easy Polo Black Edition</p>
								<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
							</div>

						</div>
					</div>
				</div>
				<div class="col-sm-3">
					<div class="product-image-wrapper">
						<div class="single-products">
							<div class="productinfo text-center">
								<img src="images/home/gallery2.jpg" alt="" />
								<h2>$56</h2>
								<p>Easy Polo Black Edition</p>
								<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
							</div>

						</div>
					</div>
				</div>
				<div class="col-sm-3">
					<div class="product-image-wrapper">
						<div class="single-products">
							<div class="productinfo text-center">
								<img src="images/home/gallery3.jpg" alt="" />
								<h2>$56</h2>
								<p>Easy Polo Black Edition</p>
								<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
							</div>

						</div>
					</div>
				</div>
				<div class="col-sm-3">
					<div class="product-image-wrapper">
						<div class="single-products">
							<div class="productinfo text-center">
								<img src="images/home/gallery4.jpg" alt="" />
								<h2>$56</h2>
								<p>Easy Polo Black Edition</p>
								<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
							</div>

						</div>
					</div>
				</div>
			</div><!--top-->

			<div class="tab-pane fade" id="blazers">
			</div><!--reccommend-->

			<div class="tab-pane fade" id="sunglass">
			</div><!--hot-->




		</div>
	</div><!--/category-tab-->

	<div class="recommended_items">
		<h2 class="title text-center">Truyện được đề cử</h2>

		<div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">

				@{
					var deCuList = (List<Comic.Data.TruyenTranh>)ViewBag.TruyenDeCu;
					int index = 0;
				}

				@foreach (var group in deCuList.Chunk(3)) // Mỗi item chứa 3 truyện
				{
					<div class="item @(index == 0 ? "active" : "")">
						@foreach (var truyen in group)
						{
							<div class="col-sm-4">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center">
											<img src="@truyen.Image" alt="@truyen.TenTruyen" style="height:200px; object-fit:cover;" />
											<h2>@truyen.TenTruyen</h2>
											<p>@truyen.TacGia</p>
											<a asp-controller="TruyenTranh" asp-action="Details" asp-route-MaTruyen="@truyen.MaTruyen" class="btn btn-default">Xem chi tiết</a>
										</div>
									</div>
								</div>
							</div>
						}
					</div>
					index++;
				}

			</div>
			<a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
				<i class="fa fa-angle-left"></i>
			</a>
			<a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
				<i class="fa fa-angle-right"></i>
			</a>
		</div>
	</div><!--/recommended_items-->

</div>